<div class="container content-wrap">
    <div class="mb-4">
        <a href="/" op="goBack" class="btn btn-secondary">‚Üê Back To Homepage</a>
    </div>
        {{#if error}}
        <p>{{error}}</p>
        {{else}}
            <div class="col">
                <iframe width="640" height="360" src="" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="col-6">
                <h4 class="h5 mb-4 font-weight-bold">Download Links <small>(multiple sizes and formats)</small></h4>
                <ul class="list-group">
                    {{#each meta.formats}}
                    <li class="list-group-item">
                        <a href="{{url}}" headers="{{http_headers}}" style="font-size: 12px">{{format_note}}
                            <div class="small">Ext: {{ext}} | Size: {{filesize}}</div>
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
</div>

<script src="/scripts/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("a").click(function () {
            alert($(this).attr("headers"));
            if ($(this).attr("op") == "goBack") {
                return true;
            }
            $.ajax({
                url: $(this).attr("href"),
                headers: JSON.parse($(this).attr("headers")),
                method: 'GET',
                success: function(data){
                    alert("aaa");
                }
            });
            return false;
        });
    })
</script>

